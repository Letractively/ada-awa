with "config";
with "@UTIL_DIR@util";
with "@UTIL_DIR@testutil";
with "@EL_DIR@el";
with "@ASF_DIR@asf";
with "@ASF_DIR@asfunit";
with "@ADO_DIR@ado";
with "awa";

project AwaUnit is

   Library_Dir := "lib";

   for Source_Dirs use ("awaunit");

   for Library_Dir use Library_Dir & "/awaunit";
   for Library_Name use "awaunit";
   for Library_Kind use "static";

   for Object_Dir use "./" & Config'Object_Dir & "/obj/awaunit";
   for Exec_Dir use "./" & Config'Exec_Dir & "/bin";

   package Binder renames Config.Binder;
   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;

end AwaUnit;
