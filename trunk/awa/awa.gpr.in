with "config";
with "@UTIL_DIR@util";
with "@EL_DIR@el";
with "@ADO_DIR@ado";
with "@ASF_DIR@asf";

project Awa is

   Version := "@AWA_VERSION@";
   Library_Dir := "@AWA_LIBDIR@";
   Library_Type : Config.Library_Type_Type := external ("LIBRARY_TYPE", "static");
   Exec_Dir     := "./" &  Config'Exec_Dir & "/bin";

   Aws_Status : Config.Yes_No := "@AWA_AWS_STATUS@";

   for Source_Dirs use ("src", "src/model");

   for Library_Name use "ada-awa";
   for Library_Dir use Library_Dir & "/awa";
   for Library_Kind use Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Version;

   for Library_Dir use "lib/awa/" & Project'Library_Kind;
   for Object_Dir use "obj/awa/" & Project'Library_Kind;
   for Exec_Dir use Project'Exec_Dir;

   package Binder renames Config.Binder;
   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Linker renames Config.Linker;

end Awa;
