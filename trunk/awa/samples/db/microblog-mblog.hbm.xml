<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping default-cascade="none">
    <class name="Atlas.Microblog.Models.Mblog" table="mblog"
           dynamic-insert="true" dynamic-update="true">
        <comment>The mblog table.</comment>
        <id name="id" type="ADO.Identifier" unsaved-value="0">
            <comment>the mblog id</comment>
            <column name="id" not-null="true" unique="false" sql-type="BIGINT"/>
            <generator class="sequence"/>
        </id>
        <version name="version" type="int" column="version">
            <comment>the mblog version</comment>
	</version>
        <property name="message" type="String">
            <comment>the mblog message</comment>
            <column name="message" not-null="false" unique="false" sql-type="VARCHAR(256)"/>
        </property>
        <property name="create_date" update="false" type="Time">
            <comment>the mblog creation date</comment>
            <column name="create_date" not-null="true" unique="false" sql-type="DATETIME"/>
        </property>
        <many-to-one name="author" class="AWA.Users.Models.User" foreign-key="ID" not-null="true" lazy="proxy" fetch="select">
            <comment>the post author</comment>
            <column name="author_id" not-null="true" sql-type="INTEGER"/>
        </many-to-one>
    </class>
</hibernate-mapping>
