<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping default-cascade="none">
    <enum name="AWA.Jobs.Models.Job_Status_Type">
       <comment>The job status</comment>
       <value name="SCHEDULED" value="0"/>
       <value name="RUNNING" value="1"/>
       <value name="CANCELED" value="2"/>
       <value name="FAILED" value="3"/>
       <value name="TERMINATED" value="4"/>
    </enum>
    <class name="AWA.Jobs.Models.Job" table="awa_jobs"
           dynamic-insert="true" dynamic-update="true">
        <comment>The jobs table.</comment>
        <id name="id" type="ADO.Identifier" unsaved-value="0">
            <comment>the jobs id</comment>
            <column name="id" not-null="true" unique="false" sql-type="BIGINT"/>
            <generator class="sequence"/>
        </id>
        <version name="version" type="int" column="version">
            <comment>the jobs version</comment>
	</version>
        <property name="name" type="String">
            <comment>the jobs name</comment>
            <column name="name" not-null="false" unique="false" sql-type="VARCHAR(256)"/>
        </property>
        <property name="create_date" update="false">
            <comment>the jobs creation date</comment>
            <column name="create_date" not-null="false" unique="false" sql-type="DATETIME"/>
            <type name="Time"/>
        </property>
        <property name="start_date" update="true">
            <comment>the jobs start date</comment>
            <column name="start_date" not-null="false" unique="false" sql-type="DATETIME"/>
            <type name="Nullable_Time"/>
        </property>
        <property name="finish_date" update="true">
            <comment>the jobs finish date</comment>
            <column name="finish_date" not-null="false" unique="false" sql-type="DATETIME"/>
            <type name="Nullable_Time"/>
        </property>
        <property name="status">
            <comment>the job status</comment>
            <column name="status" not-null="true" unique="false" sql-type="INTEGER"/>
            <type name="AWA.Jobs.Models.Job_Status_Type"/>
        </property>
        <property name="server_id" type="Integer">
            <comment>the server which is processing this job</comment>
            <column name="server_id" not-null="true" unique="false" sql-type="INTEGER"/>
        </property>
        <property name="task_id" type="Integer">
            <comment>the task within the server which is processing this job</comment>
            <column name="task_id" not-null="true" unique="false" sql-type="INTEGER"/>
        </property>
        <property name="parameters" type="String">
            <comment>the job parameters</comment>
            <column name="parameters" not-null="true" unique="false" sql-type="VARCHAR(60000)"/>
        </property>
        <property name="messages" type="String">
            <comment>the job messages</comment>
            <column name="messages" not-null="true" unique="false" sql-type="VARCHAR(60000)"/>
        </property>
        <property name="results" type="String">
            <comment>the job results</comment>
            <column name="results" not-null="true" unique="false" sql-type="VARCHAR(60000)"/>
        </property>
        <many-to-one name="user" class="AWA.Users.Models.User" foreign-key="ID" not-null="false" lazy="proxy" fetch="select">
            <comment>the user who triggered the job</comment>
            <column name="user_id" not-null="true" sql-type="INTEGER"/>
        </many-to-one>
        <many-to-one name="session" class="AWA.Users.Models.Session" foreign-key="ID" not-null="false" lazy="proxy" fetch="select">
            <comment>the user session who triggered the job</comment>
            <column name="session_id" not-null="true" sql-type="INTEGER"/>
        </many-to-one>
        <many-to-one name="queue" class="Queue" foreign-key="ID" not-null="true" lazy="proxy" fetch="select">
            <comment>the message queue associated with this message</comment>
            <column name="queue_id" not-null="true" sql-type="INTEGER"/>
        </many-to-one>
    </class>
</hibernate-mapping>
